<%if @store.current_page == 1 %>
  <div class="top">
    <div class="top_text">
      今行きたいサウナがきっと見つかる
    </div>
    <div class="top_subtext">
      TOTONOIはあなたのサウナライフを豊かにします
    </div>
    <div class="top_search">
      <%= render partial: "store_search" %>
    </div>
    <div class="image_slider">
      <ul>
        <% @store.images[0].each do |image| %>
          <li class="slider"><%= image_tag image, size: '500x500', alt: '店舗画像' %>      
        <% end %>
        <%# <%= link_to image_tag( @stores.images[0], class: :card__img, size: '383x383'), store_path(@stores) %> %>
        <%# <li class="slider"><img src="https://placehold.jp/500x500.png" alt="">
        <li class="slider"><img src="https://placehold.jp/500x500.png" alt="">
        <li class="slider"><img src="https://placehold.jp/500x500.png" alt="">
        <li class="slider"><img src="https://placehold.jp/500x500.png" alt=""> %>
      </ul>
    </div>
    <script>
      document.querySelector('ul')
        .addEventListener('animationend',
          ({target: e})=> e.parentNode.appendChild (e), false);
    </script>
  </div>
<% end %>
<main class="main">
  <div class="inner">
    <%= render partial: "hello_user" %>
    <%= render partial: "store_search" %>
    <div class="card__wrapper">
      <%= render partial: "store", collection: @store %>
    </div>
    <%= paginate @store %>
  </div>
</main>