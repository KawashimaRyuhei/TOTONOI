<div class="card">
  <% @results.images.each do |image|  %>
  <div class="messages">
      <%= link_to image_tag( image, class: :card__img), store_path(store) %> 
  </div>
  <% end %>
  <div class="card__body">
    <%= link_to store.name, store_path(store), class: :card__title%>
    <table class="table1">
      <tr>
        <th>水風呂</th>
        <th>サウナ内温度</th>
      </tr>
      <tr>
        <td><%= "#{result.water}℃" %></td>
        <td><%= "#{result.temperature}℃" %></td>
      </tr>
    </table>
    <table class="table2">
      <tr>
        <th>ロウリュ</th>
        <th>ロウリュタイム</th>
      </tr>
      <tr>
        <td><%= "#{result.roryu_status}" %></td>
        <td><%= "#{result.roryu_time}"%></td>
      </tr>
    </table>
    <div id="goods_buttons_<%= store.id %>">
      <%= render partial: 'goods/good', locals: { store: store } %>
    </div>
  </div>
</div>